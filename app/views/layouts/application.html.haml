            %li.about-us
              %em
              %a{ href: '#'}
                %span
                О нас
            %li.products
              %em
              %a{ href: '#'}
                %span
                Продукция
            %li.services
              %em
              %a{ href: '#'}
                %span
                Услуги
            %li.contacts
              %em
              %a{ href: '#'}
                %span
                Контакты
      #after-top-bar
        .container
          test
      #our-capabilities
    = yield
